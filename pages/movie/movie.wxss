.itemImg {
  width: 500rpx;
  height: 700rpx;
  display: block;
  margin: 20rpx auto;
}

.page .title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.rating, .author, .actor {
  font-size: 24rpx;
  font-weight: 400;
  display: block;
  color: #999;
  margin-left: 120rpx;
  padding: 10rpx;
}

.abstract {
  font-weight: 700;
  display: block;
  margin: 30rpx 0 10rpx 20rpx;
}

.summary {
  font-size: 28rpx;
  white-space: 4rem;
  margin: 0 95rpx;
  line-height: 50rpx;
}

.movies {
  width: 400rpx;
  height: 300rpx;
  margin: 5rpx auto;
}

video {
  width: 100%;
  height: 100%
}

.summary text {
  padding: 10rpx;
}
